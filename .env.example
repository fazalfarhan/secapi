# Application
ENVIRONMENT=development
SECRET_KEY=change-this-to-a-random-32-character-string
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database
DATABASE_URL=postgresql+asyncpg://secapi:secapi@localhost:5432/secapi

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=3600

# API Key Reset
RESET_METHOD=console
RESET_TOKEN_EXPIRY_MINUTES=15

# SMTP (for production email mode)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@secapi.local
SMTP_USE_TLS=true
