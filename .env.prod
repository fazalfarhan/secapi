# Production Environment
ENVIRONMENT=production

# Application (MUST CHANGE)
SECRET_KEY=CHANGE_THIS_GENERATE_WITH_openssl_rand_base64_32
API_KEY_PREFIX=secapi
API_KEY_LENGTH=32

# CORS (update with your domain)
ALLOWED_ORIGINS=https://secapi.example.com,https://www.secapi.example.com

# API V1 Prefix
API_V1_STR=/api/v1

# Database (update with production database)
DATABASE_URL=postgresql+asyncpg://user:password@prod-db:5432/secapi

# Redis (update with production redis)
REDIS_URL=redis://prod-redis:6379/0
CELERY_BROKER_URL=redis://prod-redis:6379/1
CELERY_RESULT_BACKEND=redis://prod-redis:6379/2

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=3600

# API Key Reset (Production - sends email)
RESET_METHOD=email
RESET_TOKEN_EXPIRY_MINUTES=15

# SMTP (REQUIRED for email reset method)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@secapi.example.com
SMTP_USE_TLS=true
