# Development Environment
ENVIRONMENT=development

# Application
SECRET_KEY=dev-secret-key-change-in-production-32chars
API_KEY_PREFIX=secapi
API_KEY_LENGTH=32

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# API V1 Prefix
API_V1_STR=/api/v1

# Database (Docker Compose)
DATABASE_URL=postgresql+asyncpg://secapi:secapi@postgres:5432/secapi

# Redis (Docker Compose)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=3600

# API Key Reset (Development - logs to console)
RESET_METHOD=console
RESET_TOKEN_EXPIRY_MINUTES=15